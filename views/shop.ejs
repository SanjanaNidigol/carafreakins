                <img src="../img/products/vex_ban.jpg" alt="Slide 3" style="width: 100%; height: 100%;">
            </div>
            <div class="slideshow__slide">
                <img src="..\img\products\newban.jpg" alt="Slide 4" style="width: 100%; height: 100%;">
            </div>
        </div>
        <div class="slide-indicators">
            <div class="indicator active" data-index="0"></div>
            <div class="indicator" data-index="1"></div>
            <div class="indicator" data-index="2"></div>
            <div class="indicator" data-index="3"></div> 
        </div>
    </section>
    <section id="product1" class="section-p1">
        <div class="pro-container">
            <% details.forEach(product => { %>
                <div class="pro" >
                    <img src="<%= product.images[0] %>" alt="" onclick="window.location.href='/sproduct/<%= product.id %>';">
                    <div class="des">
                        <span>freakins</span>
                        <h5><%= product.name %></h5>
                        <div class="star">
                            <% for (let i = 0; i < 5; i++) { %>
                                <% if (i < Math.floor(product.star_rating)) { %>
                                    <i class="fas fa-star"></i>
                                <% } else if (i < product.star_rating) { %>
                                    <i class="fas fa-star-half-alt"></i>
                                <% } else { %>
                                    <i class="far fa-star"></i>
                                <% } %>
                            <% } %>
                        </div>
                        <% if (product.price && product.originalPrice) { %>
                            <h4 class="discount-price">₹<%= product.price %>
                                <span class="original-price">₹<%= product.originalPrice %></span>
                            </h4>
                        <% } else if (product.price) { %>
                            <h4 class="price">₹<%= product.price %></h4>
                        <% } %>
                    </div>
                </div>
                <br>
            <% }); %>
        </div>
    </section>
